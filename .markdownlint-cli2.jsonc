// sample configuration file for markdownlint-cli2 repo itself
{
	"config": {
		"fenced-code-language": {
			"allowed_languages": ["bash"],
			"language_only": true
		},
		"line-length": {
			"line_length": 82,
		},
		"no-inline-html": true
	},
	// Markdownlint-cli2.sh should work whether "fix" is "true" or "false"
	"fix": false,
	"gitignore": true,
	// Markdownlint-cli2.sh should work whether "noProgress" is "true" or "false"
	"noProgress": true
}
